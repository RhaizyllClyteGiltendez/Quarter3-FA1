<!DOCTYPE html>
<html>
<head>
  <title>Personal Information and Calculations</title>
</head>
<body>
  
  <button onclick="showAlert()">Show Alert</button>

  <script>
    function showAlert() {
      var Name = prompt("Enter the name: ");
      var Height = prompt("Enter the height (inches): ");
      var Weight = prompt("Enter the weight (kg): ");
      alert("Name: " + Name + "\nHeight (inches): " + Height + "\nWeight (kg): " + Weight);
    }
  </script>

  <div id="greeting"></div> 

  <script>
    function calculateAge(birthYear) {
      var currentYear = 2025;
      return currentYear - birthYear;
    }

    var Name = prompt("Enter the name: ");
    var Lastname = prompt("Enter the lastname: ");
    var Birthyear = prompt("Enter the birthyear: ");
    var Age = calculateAge(Birthyear);

    document.getElementById("greeting").innerText = "Hello " + Name + " " + Lastname + "! " + "How does it feel to be " + Age + " years old?";
  </script>

  <script>
    function calculateAge(birthYear) {
      var currentYear = 2025;
      return currentYear - birthYear;
    }

    var userConsent = confirm("Do you agree to share your personal information with our site?");

    if (userConsent) {
      var Name = prompt("Enter the name: ");
      var Lastname = prompt("Enter the lastname: ");
      var Birthyear = prompt("Enter the birthyear: ");
      var Age = calculateAge(Birthyear);

      console.log("Name: " + Name + " " + Lastname);
      console.log("Age: " + Age + " years old");
    } else {
      console.log("User does not wish to share his/her information.");
    }
  </script>
</body>
</html>
